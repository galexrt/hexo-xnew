div.social-icon
  if theme.icon
    if theme.icon.rss
      a(target="_blank" href= theme.icon.rss)
        i.fa.fa-rss-square(aria-hidden="true")
    if theme.icon.facebook
      a(target="_blank" href= "https://www.facebook.com/" + theme.icon.facebook)
        i.fa.fa-facebook-square(aria-hidden="true")
    if theme.icon.github
      a(target="_blank" href= "https://github.com/" + theme.icon.github)
        i.fa.fa-github-square(aria-hidden="true")
    if theme.icon.twitter
      a(target="_blank" href= "https://twitter.com/" + theme.icon.twitter)
        i.fa.fa-twitter-square(aria-hidden="true")
    if theme.icon.steam
      a(target="_blank" href= "https://steamcommunity.com/id/" + theme.icon.steam)
        i.fa.fa-steam-square(aria-hidden="true")
    if theme.icon.googleplus
      a(target="_blank" href= "https://plus.google.com/+" + theme.icon.googleplus)
        i.fa.fa-google-plus-square(aria-hidden="true")
    if theme.icon.zhihu
      a(target="_blank" href= "https://www.zhihu.com/people/" + theme.icon.zhihu) &#xe63f;
    if theme.icon.weibo
      a(target="_blank" href= "https://weibo.com/" + theme.icon.weibo)
        i.fa.fa-weibo(aria-hidden="true")
